<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>digger:MemberlistRussianAlphabet</id>
	<name>Memberlist Additional Alphabet</name>
	<version>2.0.1</version>
	<type>modification</type>

<install for="2.0 - 2.0.99">
 		<readme type="inline">Memberlist Additional Alphabet</readme>
		<modification>modification.xml</modification>
		<modification>languages/russian.xml</modification>
		<modification>languages/russian-utf8.xml</modification>
		<modification>languages/arabic-utf8.xml</modification>
		<modification>languages/polish-utf8.xml</modification>
</install>

<uninstall for="2.0 - 2.0.99">
		<modification reverse="true">modification.xml</modification>
		<modification reverse="true">languages/russian.xml</modification>
		<modification reverse="true">languages/russian-utf8.xml</modification>
		<modification reverse="true">languages/arabic-utf8.xml</modification>
		<modification reverse="true">languages/polish-utf8.xml</modification>
</uninstall>

	<install for="2.1.*">
		<readme type="inline">Memberlist Additional Alphabet</readme>
		<modification>modification.xml</modification>
		<modification>languages/russian21.xml</modification>
		<modification>languages/arabic21.xml</modification>
		<modification>languages/polish21.xml</modification>
	</install>

	<uninstall for="2.1.*">
		<modification reverse="true">modification.xml</modification>
		<modification reverse="true">languages/russian21.xml</modification>
		<modification reverse="true">languages/arabic21.xml</modification>
		<modification reverse="true">languages/polish21.xml</modification>
	</uninstall>

</package-info>
